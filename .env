# ===========================================
# RAG Chatbot - Environment Variables
# ===========================================
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# Cohere API (WAJIB)
# Daftar di: https://dashboard.cohere.com
COHERE_API_KEY=K2SkePEJjg3kIDgcwBxZoid3i8aCFFNPIMU4DCx0

# Database PostgreSQL + pgvector
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_db

# Redis Cache
# Format: redis://host:port/db_number
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=10
REDIS_RETRY_ATTEMPTS=3
REDIS_HEALTH_CHECK_INTERVAL=30

# ===========================================
# RAG Configuration
# ===========================================

# Embedding Model (Cohere)
EMBEDDING_MODEL=embed-multilingual-v3.0

# LLM Model (Cohere)
LLM_MODEL=command-a-03-2025

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K=5
RRF_K=60

# Cache TTL (seconds)
CACHE_TTL=3600
CHAT_HISTORY_TTL=86400

# ===========================================
# Application Settings
# ===========================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
